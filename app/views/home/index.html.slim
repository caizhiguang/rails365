= render 'shared/site_info_home_desc'

- cache @movies do
  .row
    .col-md-12
      .panel.panel-default
        .panel-heading
          div
            | 视频
        .panel-body.pb0.pt15.home-video
          - @movies.each do |movie|
            = render partial: 'movies/movie', locals: { movie: movie }

- cache @playlists do
  .row
    .col-md-12
      .panel.panel-default
        .panel-heading
          div
            | 播放列表
        .panel-body.pb0.pt15.home-video
          - @playlists.each do |playlist|
            = render partial: 'playlists/playlist', locals: { playlist: playlist }

= render 'shared/books'

- cache @groups do
  .row
    .col-md-12
      .panel.panel-default
        .panel-heading
          div
            | 分类
        .panel-body.pb0
          = render partial: 'groups/group', locals: { groups: @groups }

.row
  - cache [@articles, current_user] do
    .col-md-6
      .panel.panel-default
        .panel-heading
          div 最近的文章
        .panel-body.pb0
          - @articles.each do |article|
            = render partial: 'articles/article', locals: { article: article }

  - cache [@hot_articles, current_user] do
    .col-md-6
      .panel.panel-default
        .panel-heading
          div 最热门的文章
        .panel-body.pb0
          - @hot_articles.each do |article|
            = render partial: 'articles/article', locals: { article: article }

