var movie_id = ".movie-id-" + "<%= @movie.id %>";
var movie_count = ".movie-count-" + "<%= @movie.id %>";
$(movie_id).text("<%= @movie.likers_by(User).count %>");
<% if @movie.liked_by?(current_user) %>
  $(movie_count).removeClass('fa-heart-o').addClass('fa-heart');
<% else %>
  $(movie_count).removeClass('fa-heart').addClass('fa-heart-o');
<% end %>
