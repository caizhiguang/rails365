var soft_id = ".soft-id-" + "<%= @soft.id %>";
var soft_count = ".soft-count-" + "<%= @soft.id %>";
$(soft_id).text("<%= @soft.like_count %>");
<% if @soft.liked_by?(current_user) %>
  $(soft_count).removeClass('fa-heart-o').addClass('fa-heart heart-green');
  $(soft_id).addClass("heart-green");
<% else %>
  $(soft_count).removeClass('fa-heart heart-green').addClass('fa-heart-o');
  $(soft_id).removeClass("heart-green");
<% end %>
