<div class="text-center">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="container bootstrap snippet">
      <div class="lc-block col-md-4 col-md-offset-4 toggled" id="l-login">
        <div class="lcb-float"><i class="fa fa-users"></i></div>
        <% if flash[:alert].present? %>
          <div class="alert alert-warning">
            <%= flash[:alert] %>
          </div>
        <% end %>
        <div class="form-group">
          <%= f.text_field :login, autofocus: true, class: "form-control", placeholder: "邮箱或用户名" %>
        </div>
        <div class="form-group">
          <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "密码" %>
        </div>
        <div class="clearfix"></div>
        <%= f.submit t('.sign_in', :default => "Sign in"), class: "btn btn-block btn-primary btn-float m-t-25" %>
        <div class="prompt-box text-left">
          没有账号？
          <%= link_to "注册", new_registration_path(resource_name), class: "clickable" %>
          <%= link_to "忘记密码", new_password_path(resource_name), class: "right clickable" %>
        </div>
        <div class="oauth-box text-left">
          第三方账号登录：
          <%= link_to omniauth_authorize_path(:user, :github), class: "btn btn-link" do %>
            <i class="fa fa-github" aria-hidden="true"></i>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>
