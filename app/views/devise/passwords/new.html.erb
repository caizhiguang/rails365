<div class="text-center">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, role: "form" }) do |f| %>
    <div class="container bootstrap snippet">
      <div class="lc-block col-md-4 col-md-offset-4 toggled" id="l-login" style="padding-top: 15px;">
        <h4 style="margin-bottom: 25px;"><%= t('.forgot_your_password', :default => 'Forgot your password?') %></h4>
        <%= devise_error_messages! %>
        <div class="form-group">
          <%= f.email_field :email, autofocus: true, id: "login-username", class: "form-control", placeholder: User.human_attribute_name('email') %>
        </div>
        
        <div class="clearfix"></div>
        <%= f.submit t('.send_me_reset_password_instructions', :default => "Send me reset password instructions"), id: "btn-login", class: "btn btn-block btn-primary btn-float m-t-25" %>
        
      </div>
    </div>
  <% end %>
</div>
